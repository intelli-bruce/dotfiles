# Ghostty Configuration - Basic Settings

# Font Settings
font-family = JetBrainsMono Nerd Font
font-family = Pretendard
font-family = Apple SD Gothic Neo
font-family = Nanum Gothic
font-size = 14

# Font codepoint mapping for Korean characters
font-codepoint-map = U+AC00-U+D7AF=Pretendard
font-codepoint-map = U+1100-U+11FF=Pretendard
font-codepoint-map = U+3130-U+318F=Pretendard

# Window padding
window-padding-x = 10
window-padding-y = 10

# Basic shell settings
shell-integration = detect

# ===== Keybindings (tmux-style) =====

# Pane navigation with Alt+h/j/k/l (tmux: Alt+h/j/k/l)
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

# Create new splits with Alt+\ and Alt+- (tmux: Alt+\ and Alt+-)
keybind = alt+backslash=new_split:right
keybind = alt+minus=new_split:down

# Close pane with Alt+w (tmux: Alt+w)
keybind = alt+w=close_surface

# Zoom toggle with Alt+f (tmux: Alt+f)
keybind = alt+f=toggle_split_zoom

# Tab navigation with Alt+n/p (tmux: Alt+n/p for window navigation)
keybind = alt+n=previous_tab
keybind = alt+p=next_tab

# New tab with Alt+c (tmux: Alt+c for new window)
keybind = alt+c=new_tab

# Switch to tab by number with Alt+1-5 (tmux: Alt+1-5)
keybind = alt+one=goto_tab:1
keybind = alt+two=goto_tab:2
keybind = alt+three=goto_tab:3
keybind = alt+four=goto_tab:4
keybind = alt+five=goto_tab:5

# Resize panes with Alt+Shift+h/j/k/l (tmux: Alt+Shift+h/j/k/l)
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+j=resize_split:down,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+l=resize_split:right,10

# Additional resize with Alt+Ctrl+h/j/k/l (tmux: Alt+Ctrl+h/j/k/l)
keybind = alt+ctrl+h=resize_split:left,10
keybind = alt+ctrl+j=resize_split:down,10
keybind = alt+ctrl+k=resize_split:up,10
keybind = alt+ctrl+l=resize_split:right,10

# Copy mode with Alt+a (tmux: Alt+a)
keybind = alt+a=copy_to_clipboard

# Scrolling with Alt+u/d (tmux: Alt+u/d for half page scroll)
keybind = alt+u=scroll_page_up
keybind = alt+d=scroll_page_down

# Quick actions
# keybind = alt+q=show_split_debugger  # Not available in Ghostty
keybind = alt+space=equalize_splits
keybind = alt+equal=equalize_splits

# Reload config with Cmd+Shift+R (macOS style)
keybind = super+shift+r=reload_config

# Additional useful bindings
keybind = super+shift+c=copy_to_clipboard
keybind = super+shift+v=paste_from_clipboard

# Quick window management
keybind = super+t=new_tab
keybind = super+shift+t=new_window
keybind = super+w=close_tab

# Tab switching with Cmd+1-9 (macOS style alternative)
keybind = super+one=goto_tab:1
keybind = super+two=goto_tab:2
keybind = super+three=goto_tab:3
keybind = super+four=goto_tab:4
keybind = super+five=goto_tab:5
keybind = super+six=goto_tab:6
keybind = super+seven=goto_tab:7
keybind = super+eight=goto_tab:8
keybind = super+nine=goto_tab:9