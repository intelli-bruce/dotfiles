# Ghostty Configuration

# Reload config shortcut
keybind = super+shift+r=reload_config

# Theme
theme = Dracula

# Font Settings
font-family = JetBrainsMono Nerd Font
font-family = Pretendard
font-family = Apple SD Gothic Neo
font-size = 16.5

# Window padding
window-padding-x = 10
window-padding-y = 10

# Window transparency and blur
background-opacity = 0.95
background-blur = 20

# Focus/unfocus panel brightness
unfocused-split-opacity = 0.7

# Performance Settings - 240Hz
window-vsync = false
custom-shader-animation = always

# Basic shell settings
shell-integration = detect
window-save-state = always
confirm-close-surface = true

# Panel navigation keybindings
keybind = super+shift+h=goto_split:left
keybind = super+shift+j=goto_split:down
keybind = super+shift+k=goto_split:up
keybind = super+shift+l=goto_split:right

# Panel resize keybindings
keybind = super+ctrl+h=resize_split:left,10
keybind = super+ctrl+j=resize_split:down,10
keybind = super+ctrl+k=resize_split:up,10
keybind = super+ctrl+l=resize_split:right,10

# Panel split keybindings
keybind = super+shift+backslash=new_split:right
keybind = super+shift+minus=new_split:down

# Equalize all panels
keybind = super+ctrl+equal=equalize_splits

# Toggle split zoom (maximize current panel)
keybind = super+shift+enter=toggle_split_zoom

# Scrolling keybindings
keybind = super+shift+u=scroll_page_up
keybind = super+shift+d=scroll_page_down

# Quick Terminal settings
quick-terminal-position = center
quick-terminal-screen = main
quick-terminal-animation-duration = 0.2
quick-terminal-autohide = false
quick-terminal-space-behavior = move

# Fullscreen support for Quick Terminal
macos-non-native-fullscreen = true

# Quick Terminal keybinding (Cmd+Shift+O)
keybind = super+shift+o=toggle_quick_terminal

# Quick Terminal fullscreen toggle (Cmd+Shift+I)
keybind = super+shift+i=toggle_fullscreen

# Tab navigation
keybind = super+shift+n=previous_tab
keybind = super+shift+p=next_tab