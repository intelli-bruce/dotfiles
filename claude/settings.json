{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Tink.aiff"
          }
        ]
      }
    ],
    "TaskComplete": [
      {
        "matcher": ".*complete.*|.*finish.*|.*done.*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/task-complete.sh"
          }
        ]
      }
    ],
    "ProgressUpdate": [
      {
        "matcher": ".*test.*pass.*|.*build.*success.*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/progress-update.sh 20"
          }
        ]
      }
    ]
  },
  "brxce": {
    "cli_path": "brxce",
    "auto_update": true,
    "default_project": "BRXCE",
    "progress_increments": {
      "file_edit": 5,
      "test_pass": 20,
      "build_success": 15
    }
  }
}