{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Tink.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "brxce": {
    "cli_path": "brxce",
    "auto_update": true,
    "default_project": "BRXCE",
    "progress_increments": {
      "file_edit": 5,
      "test_pass": 20,
      "build_success": 15
    }
  }
}
